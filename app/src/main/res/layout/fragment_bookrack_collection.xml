<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_loading_logout"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_loading_logout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_please_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请登录后"
                android:autoLink="all"
                android:textColor="@color/text_color_FF000000"
                android:textSize="@dimen/common_text_15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_please_login"
                android:text=" , 查看你的私密信息"
                android:textSize="@dimen/common_text_15sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
