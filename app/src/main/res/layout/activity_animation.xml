<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_animation_top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/iv_animation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/toolbar_back_normal" />

        <TextView
            android:id="@+id/tv_animation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="动画" />

    </RelativeLayout>

    <View
        android:id="@+id/view_animation_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_animation_top"
        android:background="#EEEEEE"/>

    <WebView
        android:layout_below="@+id/view_animation_line"
        android:id="@+id/web_view_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
