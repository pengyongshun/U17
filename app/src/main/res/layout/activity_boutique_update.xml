<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/rl_aboutique_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/iv_boutique_update_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:src="@drawable/toolbar_back_normal" />

        <TextView
            android:id="@+id/tv_search_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="条漫每日更新"></TextView>
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_aboutique_result_toolbar"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"></View>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/boutique_refresh_listview"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:groupIndicator="@null"/>
</RelativeLayout>
