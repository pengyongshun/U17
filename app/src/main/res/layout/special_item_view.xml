<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_special_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:background="#71e271"
            android:layout_marginLeft="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="漫画"/>
        <TextView
            android:id="@+id/tv_special_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="魔兽专区"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_special_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="12dp"
        android:text="2016-06-14至今"/>
    <ImageView
        android:id="@+id/iv_special_cover"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_recycler_image_default"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#cccccc"
        ></View>
</LinearLayout>