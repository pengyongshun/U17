<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa"
    tools:context="com.example.u17.moudle_search.activity.SerachDetialActivity">
<android.support.v7.widget.Toolbar
    android:id="@+id/activity_serach_detial_tool"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/activity_serach_detial_tool_iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_back"/>
        <TextView
            android:id="@+id/activity_serach_detial_tool_tv_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="完美作品"
            android:textSize="28dp"
            android:gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/activity_serach_detial_indactor_one"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/activity_serach_detial_tool"
        android:background="#eeeeee"/>
   <android.support.design.widget.TabLayout
       android:id="@+id/activity_serach_detial_tab_title"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       app:tabMode="fixed"
       android:layout_below="@id/activity_serach_detial_indactor_one"
       app:tabIndicatorHeight="3dp"
       app:tabSelectedTextColor="#00ff00"
       app:tabIndicatorColor="#00ff00" />
    <View
        android:id="@+id/activity_serach_detial_indactor_two"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/activity_serach_detial_tab_title"
        android:background="#eeeeee"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_serach_detial_vp_fragment"
        android:layout_width="match_parent"
        android:layout_below="@id/activity_serach_detial_indactor_two"
        android:layout_height="match_parent"/>
</RelativeLayout>
