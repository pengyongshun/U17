<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_recycler_item"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_boutique_cover"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dp"
        android:src="@drawable/u17_default_comic_cover_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_vip_or_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:src="@drawable/main_boutique_vip"/>
        <TextView
            android:id="@+id/tv_boutique_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#3f3f3f"
            android:text="守护者传说" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_boutique_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="魔幻世界冒险故事"
        android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>