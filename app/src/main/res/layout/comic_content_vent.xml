<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_vent_off_or_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_vent_off"/>
        <EditText
            android:id="@+id/et_vent_in"
            android:layout_toRightOf="@+id/iv_vent_off_or_on"
            android:layout_toLeftOf="@+id/tv_start_vent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入脑洞吐槽吧"
            />
        <TextView
            android:id="@+id/tv_start_vent"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/comic_content_start_vent_bg"
            android:text="发射"/>
    </RelativeLayout>
</LinearLayout>