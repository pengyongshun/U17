<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_comic_cover"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/u17_default_comic_cover_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_comic_cover"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_comic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_comic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="镇魂街"
                android:textStyle="bold"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_comic_is_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_comic_name"
                android:src="@drawable/icon_comic_vip"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_comic_rank_number"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_comic_first"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:textSize="10sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_comic_tags_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_comic_name"
            android:layout_marginTop="10dp"
            android:text="少年 魔幻"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_comic_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comic_tags_author"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:text="镇魂街，此乃吸纳亡灵镇压恶灵之地。这是一个人灵共存的世界，但不是每个人都能进入镇魂街，只有拥有守护灵的寄灵人才可进入。夏铃原本是一名普通的大学实习生，但一次偶然导致她的人生从此不再平凡。。。在这个充满恶灵的世界，你能与你的守护灵携手生存下去吗？官博@镇魂街：http://weibo.com/u/5195985855 镇魂街微信号：zhenhunjieu17"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_comic_conTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_comic_conTag_value"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:text="月票值"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comic_conTag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comic_description"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_comic_conTag"
            android:gravity="bottom"
            android:text="9520"
            android:textSize="15sp" />


    </RelativeLayout>


</RelativeLayout>