<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u17.moudle_search.activity.StatisticsHeadPhotoActivity">
<LinearLayout
    android:id="@+id/activity_statistics_head_photo_ll_actionbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/activity_statistics_head_photo_iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp" 
        android:src="@drawable/icon_back"
        android:onClick="onClick"/>
    <View
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
   <TextView
       android:id="@+id/activity_statistics_head_photo_tv_save"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20dp"
       android:text="保存"
       android:onClick="onClick"
       android:gravity="center"/>
    <TextView
        android:id="@+id/activity_statistics_head_photo_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="分享"
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>
</LinearLayout>
    <View
        android:id="@+id/activity_statistics_head_photo_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/activity_statistics_head_photo_ll_actionbar"
        android:background="#55ffffff"/>
    <ImageView
    android:id="@+id/activity_statistics_head_photo_iv_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/activity_statistics_head_photo_view_line"
    android:src="@mipmap/ic_launcher"/>
</RelativeLayout>
