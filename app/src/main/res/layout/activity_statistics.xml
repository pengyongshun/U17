<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u17.moudle_search.activity.StatisticsActivity">
        <RelativeLayout
            android:id="@+id/activity_statistics_head_rl_one"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image_seal_pic_bag_top_bg"/>
            <LinearLayout
                android:id="@+id/activity_statistics_head_ll_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/activity_statistics_head_iv_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:onClick="onClick"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_back"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/activity_statistics_head_iv_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:onClick="onClick"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_share"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/activity_statistics_head_ll_bar"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/activity_statistics_head_iv_icon"
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    android:onClick="onClick"
                    android:layout_marginLeft="5dp"
                    android:layout_height="100dp"
                    android:src="@drawable/main_recycler_image_default"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/activity_statistics_tv_one"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XXXX"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/activity_statistics_tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XXXX"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/activity_statistics_tv_three"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XXXX"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/activity_statistics_tv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XXXX"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/activity_statistics_tv_five"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XXXX"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/activity_statistics_tv_six"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XXXX"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:onClick="onClick"
                        android:drawableRight="@drawable/u17_more"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/activity_statistics_head_ll_two"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/activity_statistics_head_rl_one"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/activity_statistics_head_ll_ticke"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_comic_detail_ticket"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/activity_statistics_head_tv_ticke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="月票：20"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_statistics_head_ll_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_comic_detail_comment"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/activity_statistics_head_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="评论：20"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_statistics_head_ll_download"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_comic_detail_download"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/activity_statistics_head_tv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="下载"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_statistics_head_ll_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/activity_statistics_head_ll_two"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:text="目录"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:text="2015-08-22 更新到新作预告"/>
            <TextView
                android:id="@+id/activity_statistics_head_tv_short"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="正序"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="12dp"
                android:drawableRight="@drawable/icon_comic_detail_chapters_order_up"/>
        </LinearLayout>
        <TextView
            android:id="@+id/activity_statistics_middle_tv_open"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="点击打开目录"
            android:layout_below="@id/activity_statistics_head_ll_three"
            android:onClick="onClick"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/activity_statistics_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/activity_statistics_middle_tv_open"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_comic_guess_like"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="你喜欢的"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_statistics_bottom_rv_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_statistics_bottom_title"/>
        <LinearLayout
            android:id="@+id/activity_statistics_bottom_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="上次看到的新宇预告"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/activity_statistics_bottom_btn_add"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:onClick="onClick"
                android:background="#55ff0000"
                android:layout_gravity="center_vertical"
                android:text="添加收藏"/>
            <Button
                android:id="@+id/activity_statistics_bottom_btn_read"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:onClick="onClick"
                android:layout_marginLeft="10dp"
                android:background="#00ff00"
                android:layout_gravity="center_vertical"
                android:text="继续阅读"/>
        </LinearLayout>

</RelativeLayout>
