<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u17.moudle_search.activity.StatisticsActivity">
    <RelativeLayout
        android:id="@+id/activity_statistics_head_rl_one"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_seal_pic_bag_top_bg"/>
        <LinearLayout
            android:id="@+id/activity_statistics_head_ll_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/activity_statistics_head_iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onClick"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/activity_statistics_head_iv_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onClick"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_share"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/activity_statistics_head_ll_bar"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/activity_statistics_head_iv_icon"
                android:layout_width="150dp"
                android:scaleType="centerCrop"
                android:onClick="onClick"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_statistics_tv_one"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/activity_statistics_tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textColor="#ffffff"
                    android:background="#00ff00"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/activity_statistics_tv_three"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/activity_statistics_tv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/activity_statistics_tv_five"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:background="#ff0000"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/activity_statistics_tv_six"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:onClick="onClick"
                    android:drawableRight="@drawable/u17_more"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/activity_statistics_head_ll_two"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/activity_statistics_head_rl_one"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/activity_statistics_head_ll_ticke"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_comic_detail_ticket"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/activity_statistics_head_tv_ticke"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="月票：20"
                android:gravity="center_vertical"
                android:textSize="24dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_statistics_head_ll_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_comic_detail_comment"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/activity_statistics_head_tv_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="评论：20"
                android:gravity="center_vertical"
                android:textSize="24dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_statistics_head_ll_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_comic_detail_download"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/activity_statistics_head_tv_download"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="下载"
                android:gravity="center_vertical"
                android:textSize="24dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_statistics_head_ll_three"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/activity_statistics_head_ll_two"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="24dp"
            android:text="目录"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="2015-08-22 更新到新作预告"/>
        <TextView
            android:id="@+id/activity_statistics_head_tv_short"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="正序"
            android:onClick="onClick"
            android:gravity="center"
            android:textSize="24dp"
            android:drawableRight="@drawable/icon_comic_detail_chapters_order_up"/>
    </LinearLayout>
   <Button
       android:id="@+id/activity_statistics_middle_ll_open"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:text="点击打开目录"
       android:layout_below="@id/activity_statistics_head_ll_three"
       android:onClick="onClick"
       android:textSize="24dp"
       android:layout_centerHorizontal="true"
       android:gravity="center"/>
    <LinearLayout
        android:id="@+id/activity_statistics_bottom_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/activity_statistics_middle_ll_open"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_comic_guess_like"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:text="你喜欢的"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_statistics_bottom_rv_like"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/activity_statistics_bottom_title"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="上次看到的新宇预告"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/activity_statistics_bottom_btn_add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="onClick"
        android:layout_gravity="center_vertical"
        android:text="添加收藏"/>
    <Button
        android:id="@+id/activity_statistics_bottom_btn_read"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="onClick"
        android:layout_gravity="center_vertical"
        android:text="继续阅读"/>
</LinearLayout>
</RelativeLayout>
