<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa"
    tools:context="com.example.u17.moudle_search.activity.SerachDetialActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_serach_detial_category_tool"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/activity_serach_detial_category_tool_iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:onClick="onClick"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back"/>
            <TextView
                android:id="@+id/activity_serach_detial_category_tool_tv_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="完美作品"
                android:textSize="24dp"
                android:gravity="center"/>
            <Spinner
                android:id="@+id/activity_serach_detial_category_tool_sn_meun"
                android:layout_width="80dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/activity_serach_detial_category_fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_serach_detial_category_tool"/>
</RelativeLayout>
