<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u17.moudle_search.activity.ReadingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_reading_tool_content"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/activity_reading_tool_ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_reading_tool_iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:onClick="onClick"
                android:src="@drawable/icon_back" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/activity_reading_tool_iv_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:onClick="onClick"
                android:src="@drawable/icon_share" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/activity_reading_lv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
